<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.NotesPageFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:id="@+id/noteParent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menuView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/margin_24dp"
            android:layout_height="@dimen/margin_24dp"
            android:src="@drawable/ic_menu"
            android:layout_marginVertical="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_20dp"
            />

        <View
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="@dimen/layoutHeight_40dp"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:background="@drawable/input"
            android:backgroundTint="@color/border_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profilePic"
            app:layout_constraintStart_toEndOf="@+id/menuView"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/searcheditText"
            android:layout_width="0dp"
            android:layout_height="@dimen/layoutHeight_40dp"
            android:layout_marginHorizontal="@dimen/margin_20dp"
            android:drawableStart="@drawable/ic_search_hint"
            android:drawablePadding="@dimen/margin_8dp"
            app:layout_constraintStart_toStartOf="@id/searchView"
            app:layout_constraintEnd_toEndOf="@id/searchView"
            app:layout_constraintTop_toTopOf="@id/searchView"
            app:layout_constraintBottom_toBottomOf="@id/searchView"
            android:hint="@string/search"
            style="@style/Title4"
            android:focusable="true"
            android:maxLines="1"
            android:inputType="text"
            android:textColorHint="@color/text_secondary"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text_primary"
            />

        <ImageView
            android:visibility="visible"
            android:id="@+id/profilePic"
            android:layout_width="@dimen/layoutHeight_32dp"
            android:layout_height="@dimen/layoutHeight_32dp"
            android:layout_marginEnd="@dimen/margin_28dp"
            android:layout_marginVertical="@dimen/margin_4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/profile_pic"
            />

        <TextView
            android:background="@color/white"
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="0dp"
            android:textColor="@color/action_primary_100"
            android:text="@string/cancel"
            android:gravity="center"
            style="@style/Title4"
            android:fontFamily="@font/inter_semi"
            app:layout_constraintStart_toEndOf="@id/searchView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/line_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/layoutHeight_1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/line_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:focusableInTouchMode="true"
        android:id="@+id/notesRecyclerView"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_1"
        />

    <Button
        android:id="@+id/addNoteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:background="@drawable/btn_background"
        android:backgroundTint="@color/button_tint"
        android:foreground="@android:color/transparent"
        android:textAllCaps="false"
        android:text="@string/add_note"
        style="@style/Title4"
        android:fontFamily="@font/inter_semi"
        app:cornerRadius="@dimen/borderRadious_5dp"
        android:layout_marginBottom="@dimen/margin_24dp"
        android:textColor="@color/btn_text_tint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="@dimen/margin_12dp"
        android:paddingHorizontal="@dimen/margin_28dp"
        android:drawableStart="@drawable/ic_addnote"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
